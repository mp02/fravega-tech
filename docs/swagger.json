{
    "swagger": "2.0",
    "info": {
        "description": "Challange Fravega Tech",
        "title": "API ABM Catalog",
        "contact": {
            "name": "Martin Pruyas",
            "url": "https://www.linkedin.com/in/martin-pruyas/",
